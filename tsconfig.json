{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "lib": [
      "ES2020"
    ],
    "paths": {
      "@core/*": [
        "orm/core/*"
      ],
      "@strategies/*": [
        "orm/strategies/*"
      ],
      "@context/*": [
        "orm/context/*"
      ],
      "@decorators/*": [
        "orm/decorators/*"
      ],
      "@utils/*": [
        "orm/utils/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}